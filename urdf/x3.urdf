<?xml version="1.0"?>
<robot name="x3">

  <!-- Lien racine sans inertie -->
  <link name="dummy_link"/>

  <joint name="dummy_joint" type="fixed">
    <parent link="dummy_link"/>
    <child link="base_link"/>
  </joint>

  <!-- Base du drone -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://pisteur_drone_description/meshes/x3.dae"
              scale="1 1 1"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.47 0.47 0.11"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1.5"/>
      <inertia ixx="0.0347563" ixy="0" ixz="0"
               iyy="0.07" iyz="0" izz="0.0977"/>
    </inertial>
  </link>

  <!-- Rotor 0 -->
  <link name="rotor_0">
    <visual>
      <!-- rotor centré dans son propre frame -->
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://pisteur_drone_description/meshes/propeller_ccw.dae"
              scale="0.1 0.1 0.1"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.005" radius="0.1"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.005"/>
      <inertia ixx="9.75e-07" ixy="0" ixz="0"
               iyy="4.17041e-05" iyz="0" izz="4.26041e-05"/>
    </inertial>
  </link>
  <joint name="rotor_0_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rotor_0"/>
    <!-- position du rotor par rapport à base_link (prise du SDF) -->
    <origin xyz="0.13 -0.22 0.023" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Rotor 1 -->
  <link name="rotor_1">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://pisteur_drone_description/meshes/propeller_ccw.dae"
              scale="0.1 0.1 0.1"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.005" radius="0.1"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.005"/>
      <inertia ixx="9.75e-07" ixy="0" ixz="0"
               iyy="4.17041e-05" iyz="0" izz="4.26041e-05"/>
    </inertial>
  </link>
  <joint name="rotor_1_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rotor_1"/>
    <origin xyz="-0.13 0.2 0.023" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Rotor 2 -->
  <link name="rotor_2">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://pisteur_drone_description/meshes/propeller_cw.dae"
              scale="0.1 0.1 0.1"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.005" radius="0.1"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.005"/>
      <inertia ixx="9.75e-07" ixy="0" ixz="0"
               iyy="4.17041e-05" iyz="0" izz="4.26041e-05"/>
    </inertial>
  </link>
  <joint name="rotor_2_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rotor_2"/>
    <origin xyz="0.13 0.22 0.023" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <!-- Rotor 3 -->
  <link name="rotor_3">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://pisteur_drone_description/meshes/propeller_cw.dae"
              scale="0.1 0.1 0.1"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.005" radius="0.1"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.005"/>
      <inertia ixx="9.75e-07" ixy="0" ixz="0"
               iyy="4.17041e-05" iyz="0" izz="4.26041e-05"/>
    </inertial>
  </link>
  <joint name="rotor_3_joint" type="continuous">
    <parent link="base_link"/>
    <child link="rotor_3"/>
    <origin xyz="-0.13 -0.2 0.023" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

</robot>
